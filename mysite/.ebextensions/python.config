option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "mysite.settings"
    PYTHONPATH: "/var/app/current"

  aws:elasticbeanstalk:container:python:
    WSGIPath: "mysite.wsgi:application"

  aws:autoscaling:launchconfiguration:
    RootVolumeType: gp3
    DisableIMDSv1: true

  aws:elasticbeanstalk:environment:process:default:
    HealthCheckPath: "/health"

commands:
  01_remove_old_venv:
    command: "rm -rf /var/app/venv"
    ignoreErrors: true
packages:
  yum:
    python3-devel: []
    gcc: []

container_commands:
  01_remove_old_venv:
    command: "rm -rf /var/app/venv"
    ignoreErrors: true
  02_remove_staging_venv:
    command: "rm -rf /var/app/staging/venv"
    ignoreErrors: true
  03_create_venv:
    command: "python3 -m venv /var/app/venv"
  04_pip_upgrade:
    command: "/var/app/venv/bin/pip install --upgrade pip"
  05_pip_install:
    command: "/var/app/venv/bin/pip install -r /var/app/staging/requirements.txt"

option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: mysite.wsgi:application
  aws:elasticbeanstalk:application:environment:
    PYTHONPATH: "/var/app/current"
    DJANGO_SETTINGS_MODULE: "mysite.settings"